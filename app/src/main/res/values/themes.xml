<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="First" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_orange_100</item>
        <item name="colorPrimaryDark">@color/deep_orange_100_dark</item>
        <item name="colorPrimaryVariant">@color/deep_orange_100_dark</item>
        <item name="colorSecondary">@color/deep_orange_100</item>
        <item name="colorSecondaryVariant">@color/deep_orange_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_orange_100_dark</item>
    </style>

    <style name="Second" parent="Theme.Quiz">
        <item name="colorPrimary">@color/yellow_100</item>
        <item name="colorPrimaryDark">@color/yellow_100_dark</item>
        <item name="colorPrimaryVariant">@color/yellow_100_dark</item>
        <item name="colorSecondary">@color/yellow_100</item>
        <item name="colorSecondaryVariant">@color/yellow_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_100_dark</item>
    </style>

    <style name="Third" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_purple_100_dark</item>
        <item name="colorPrimaryDark">@color/deep_purple_100</item>
        <item name="colorPrimaryVariant">@color/deep_purple_100</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/deep_purple_100_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_100_light</item>
    </style>

    <style name="Four" parent="Theme.Quiz">
        <item name="colorPrimary">@color/cyan_100</item>
        <item name="colorPrimaryDark">@color/cyan_100_dark</item>
        <item name="colorPrimaryVariant">@color/cyan_100_dark</item>
        <item name="colorSecondary">@color/cyan_100</item>
        <item name="colorSecondaryVariant">@color/cyan_100_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cyan_100</item>
    </style>

    <style name="Five" parent="Theme.Quiz">
        <item name="colorPrimary">@color/light_green_100</item>
        <item name="colorPrimaryDark">@color/light_green_100_dark</item>
        <item name="colorPrimaryVariant">@color/light_green_100_light</item>
        <item name="colorSecondary">@color/light_green_100_dark</item>
        <item name="colorSecondaryVariant">@color/light_green_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_green_100</item>
    </style>

    <style name="Six" parent="Theme.Quiz">
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryDark">@color/light_blue_900</item>
        <item name="colorPrimaryVariant">@color/light_blue_900</item>
        <item name="colorSecondary">@color/light_blue_900</item>
        <item name="colorSecondaryVariant">@color/light_blue_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue_600</item>
    </style>

    <style name="First.Fullscreen" parent="First">
        <item name="android:actionBarStyle">@style/Widget.First.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Quiz.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
